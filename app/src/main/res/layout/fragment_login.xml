<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/login_logo"
            android:layout_gravity="start"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingHorizontal="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="start"
                android:layout_marginTop="60dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Unlock More with Login"
                    android:fontFamily="@font/inter_bold"
                    android:textSize="24dp"
                    android:textColor="@color/smoky_black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Discover Endless Style Possibilities."
                    android:fontFamily="@font/inter_medium"
                    android:textSize="18dp"
                    android:textColor="@color/smoky_black" />

            </LinearLayout>

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:hint="Email Address"
                android:textColorHint="@drawable/input_selector"
                android:background="@drawable/custom_input_background"
                android:inputType="textEmailAddress"
                android:textColor="@color/smoky_black"
                android:fontFamily="@font/inter_medium" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:hint="Password"
                android:textColorHint="@drawable/input_selector"
                android:background="@drawable/custom_input_background"
                android:inputType="textPassword"
                android:textColor="@color/smoky_black"
                android:fontFamily="@font/inter_medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="Forgot Password?"
                android:textColor="@color/viridian"
                android:textSize="14dp"
                android:fontFamily="@font/inter_medium"
                android:layout_marginTop="15dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_submit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:text="Sign In"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:background="@drawable/button_background"
                android:fontFamily="@font/inter_bold"
                android:layout_marginTop="20dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Donâ€™t have an account? "
                    android:textColor="@color/smoky_black"
                    android:textSize="14dp"
                    android:fontFamily="@font/inter_medium" />

                <TextView
                    android:id="@+id/btn_sign_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Sign Up"
                    android:textColor="@color/viridian"
                    android:textSize="14dp"
                    android:fontFamily="@font/inter_medium" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
