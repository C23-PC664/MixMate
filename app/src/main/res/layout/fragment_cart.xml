<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/login_logo"
            android:layout_gravity="start"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingHorizontal="20dp"
            android:layout_marginHorizontal="20dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/coming_soon"
                android:layout_gravity="start"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="We're Currently Crafting It:\nCart Page Coming Soon!"
                android:textColor="@color/smoky_black"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="18dp"
                android:fontFamily="@font/inter_semibold"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/inter"
                android:gravity="center"
                android:text="Our team is busy crafting an exceptional\ncart experience for you.\n\nStay tuned for the exciting launch!\n\n~ MixMate Teams"
                android:textAlignment="center"
                android:textColor="@color/smoky_black"
                android:textSize="14dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>

