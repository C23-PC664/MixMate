<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/login_logo"
            android:layout_gravity="start"
            android:scaleType="fitXY"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingHorizontal="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="start"
                android:layout_marginTop="60dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Unlock All of Possibilities."
                    android:fontFamily="@font/inter_bold"
                    android:textSize="24dp"
                    android:textColor="@color/smoky_black"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Register and Explore Now!"
                    android:fontFamily="@font/inter_medium"
                    android:textSize="18dp"
                    android:textColor="@color/smoky_black"/>

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <EditText
                    android:id="@+id/et_username"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:hint="Username"
                    android:textColorHint="@drawable/input_selector"
                    android:background="@drawable/custom_input_background"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/smoky_black"
                    android:fontFamily="@font/inter_medium"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:hint="Email"
                    android:textColorHint="@drawable/input_selector"
                    android:background="@drawable/custom_input_background"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/smoky_black"
                    android:fontFamily="@font/inter_medium"/>


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:hint="Password"
                    android:textColorHint="@drawable/input_selector"
                    android:background="@drawable/custom_input_background"
                    android:inputType="textPassword"
                    android:textColor="@color/smoky_black"
                    android:fontFamily="@font/inter_medium"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <EditText
                    android:id="@+id/et_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:hint="Confirm Password"
                    android:textColorHint="@drawable/input_selector"
                    android:background="@drawable/custom_input_background"
                    android:inputType="textPassword"
                    android:textColor="@color/smoky_black"
                    android:fontFamily="@font/inter_medium"/>


            </com.google.android.material.textfield.TextInputLayout>



            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_submit"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:text="Sign Up"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:background="@drawable/button_background"
                android:fontFamily="@font/inter_bold"
                android:layout_marginTop="30dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Already have an account?? "
                    android:textColor="@color/smoky_black"
                    android:textSize="14dp"
                    android:fontFamily="@font/inter_medium"/>

                <TextView
                    android:id="@+id/btn_sign_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Sign In"
                    android:textColor="@color/viridian"
                    android:textSize="14dp"
                    android:fontFamily="@font/inter_medium" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>



</ScrollView>
