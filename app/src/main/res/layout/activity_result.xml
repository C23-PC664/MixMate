<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcfcfc">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingHorizontal="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/inter_bold"
            android:gravity="start"
            android:text="Your Customized \nOutfit Recommendation!"
            android:textSize="24sp"
            android:textColor="#100A07"
            android:textStyle="bold"
            tools:ignore="RtlHardcoded" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_underline"
            android:layout_marginTop="10dp"
            android:layout_gravity="start"/>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="218dp"
            android:layout_marginVertical="30dp"
            app:cardBackgroundColor="#87695B"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            app:strokeColor="#00000000">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/result_user_photo"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_check"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/RoundedImageView" />


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/tv_gender_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:fontFamily="@font/inter_medium"
                        android:text="Gender:"
                        android:textColor="#FCFCFC"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/tv_gender_label"
                        android:text="Male"
                        android:textSize="13sp"
                        android:textColor="#FCFCFC"
                        android:fontFamily="@font/inter_bold" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_race_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:fontFamily="@font/inter_medium"
                        android:text="Race:"
                        android:textColor="#FCFCFC"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_race"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/tv_race_label"
                        android:text="Asian"
                        android:textSize="13sp"
                        android:textColor="#FCFCFC"
                        android:fontFamily="@font/inter_bold" />

                </RelativeLayout>


            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_style_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:layout_alignParentStart="true"
                android:text="Recommended Style: "
                android:textSize="18sp"
                android:textColor="#100A07"
                android:textStyle="bold"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/tv_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:layout_toEndOf="@id/tv_style_label"
                android:text="Casual"
                android:textSize="18sp"
                android:textColor="#724E3E"
                android:textStyle="bold"
                tools:ignore="RtlHardcoded" />

        </RelativeLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_underline_2"
            android:layout_marginTop="10dp"
            android:layout_gravity="start"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/result_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"
            android:layout_marginBottom="30dp"
            tools:listitem="@layout/item_card" />

    </LinearLayout>

</ScrollView>
